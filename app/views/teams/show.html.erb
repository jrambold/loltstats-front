<h1>Team <%= @team.name %></h1>
<ul>
<% @team.users.each do |user| %>
  <li><%= user.leaguename %></li>
<% end %>
</ul>

<table>
  <tr>
    <th>Role</th>
    <th>Best</th>
    <th>Win %</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>Total</th>
  </tr>
  <% @best.each do |lane| %>
    <tr>
      <td><%= lane.role %></td>
      <td><%= lane.name %></td>
      <td><%= lane.percent %></td>
      <td><%= lane.wins %></td>
      <td><%= lane.losses %></td>
      <td><%= lane.total %></td>
    </tr>
  <% end %>
</table>
<h6>Minimum 6 Games</h6>
