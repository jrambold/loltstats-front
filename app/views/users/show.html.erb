<h2><%= @user.leaguename %></h2>
<div>
  <%= form_tag team_path(@team), method: :get, class: "form-inline" do %>
    <div class="form-group search-field">
      <%= submit_tag "update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<h3>Solo Stats</h3>
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Role</th>
        <th scope="col">Win %</th>
        <th scope="col">Wins</th>
        <th scope="col">Losses</th>
        <th scope="col">Total</th>
        </tr>
    </thead>
  <% @solo_stats.each do |lane| %>
    <tbody>
        <tr>
          <td scope="col"><%= lane.role %></td>
          <td scope="col"><%= lane.percent %></td>
          <td scope="col"><%= lane.wins %></td>
          <td scope="col"><%= lane.losses %></td>
          <td scope="col"><%= lane.total %></td>
        </tr>
    </tbody>
  <% end %>
</table>
<h3>Flex Stats</h3>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Role</th>
            <th scope="col">Win %</th>
            <th scope="col">Wins</th>
            <th scope="col">Losses</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
  <% @flex_stats.each do |lane| %>
    <tbody>
        <tr>
          <td scope="col"><%= lane.role %></td>
          <td scope="col"><%= lane.percent %></td>
          <td scope="col"><%= lane.wins %></td>
          <td scope="col"><%= lane.losses %></td>
          <td scope="col"><%= lane.total %></td>
        </tr>
    </tbody>
  <% end %>
</table>
