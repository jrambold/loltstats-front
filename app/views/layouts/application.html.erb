<!DOCTYPE html>
<html>
  <head>
    <title>LoltstatsFront</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <h1>LoL Team Stats</h1>
      <% if current_user %>
        <%= link_to current_user.name, google_user_path(current_user) %>
        <%= link_to 'Logout', logout_path %>
      <% else %>
        <%= link_to "Log In", google_oauth2_login_path %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
